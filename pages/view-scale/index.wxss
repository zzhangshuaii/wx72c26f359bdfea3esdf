/**scale.wxss**/
.container{
  width: 100%;
  height: 100%;
}
.img {
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: #aaa;
}

.img image {
  height: 400px;
}

.map {
  position: fixed;
  z-index: 50;
  margin: 0;
  width: 100%;
  height: 100%;
  box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.3), 0 12px 40px 0 rgba(0, 0, 0, 0.2);
}

.image {
  margin-right: 30px;
  float: right;
  width: 20px;
  height: 20px;
}

.hint {
  margin: 5px;
  position: fixed;
  z-index: 90;
  background: #3498db;
  background-image: -webkit-linear-gradient(top, #3498db, #2980b9);
  background-image: -moz-linear-gradient(top, #3498db, #2980b9);
  background-image: -ms-linear-gradient(top, #3498db, #2980b9);
  background-image: -o-linear-gradient(top, #3498db, #2980b9);
  background-image: linear-gradient(to bottom, #3498db, #2980b9);
  -webkit-border-radius: 15;
  -moz-border-radius: 15;
  border-radius: 15px;
  font-family: Arial;
  color: #ffffff;
  font-size: 20px;
  padding: 10px 20px 10px 20px;
  text-decoration: none;
  box-shadow: 1px 1px 2px 1px  rgba(0, 0, 0, 0.3)
}

.circle {
  bottom:5%;
  z-index: 100;
  right: 10%;
  position:fixed ;
      background: #3498db;
  background-image: -webkit-linear-gradient(top, #3498db, #2980b9);
  background-image: -moz-linear-gradient(top, #3498db, #2980b9);
  background-image: -ms-linear-gradient(top, #3498db, #2980b9);
  background-image: -o-linear-gradient(top, #3498db, #2980b9);
  background-image: linear-gradient(to bottom, #3498db, #2980b9);
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  border-radius: 50%;
  width: 30px;
  height: 30px;
  font-family: Arial;
  color: #ffffff;
  font-size: 11px;
  padding: 5px 5px 5px 5px;
  text-decoration: none;
  box-shadow: 1px 1px 2px 1px  rgba(0, 0, 0, 0.3)
}
.target.icon {
  color: #ffffff;
  position: absolute;
  margin-left: 2px;
  margin-top: 2px;
  width: 25px;
  height: 25px;

}

